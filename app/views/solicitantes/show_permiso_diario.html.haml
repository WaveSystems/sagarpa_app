= paginate @permiso_diario
%br
%br
%table.index_table
  %tbody
    %tr
      %th ID
      %th Auto
      %th Justificacion
      %th Observaciones
      %th Fecha
      %th hora de salida
      %th hora de llegada
      %th Solicita
      %th Jefe
      %th Autorizo
      %th Estado
      %th Imprimir
  - @permiso_diario.each do |permiso|
    %tr
      %td= permiso.id
      %td= Vehiculo.get_vehiculo_actual(permiso.auto_id)
      %td= permiso.justificacion
      %td= permiso.observaciones
      %td= permiso.fecha
      %td= "#{permiso.hora_salida.hour}:#{permiso.hora_salida.min}"
      %td= "#{permiso.hora_llegada.hour}:#{permiso.hora_llegada.min}"
      %td= @solicita
      %td= User.get_jefe_area(permiso.jefe_id)
      %td= permiso.autorizo
      %td= permiso.estado
      %td= link_to "HTML", show_pdf_diario_path(permiso)
